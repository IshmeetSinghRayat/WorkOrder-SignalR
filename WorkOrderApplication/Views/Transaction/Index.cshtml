@model IEnumerable<WorkOrderCore.Model.JobcardTransactionsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create Transaction</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Assigned Employee
            </th>
            <th>
                Transaction Start Date
            </th>
            <th>
                Transaction End Date
            </th>
            <th>
                Transaction Status
            </th>
            <th>
                Transaction Close At
            </th>
            <th>
                Priority
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobCardsTranasctionsStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobCardsTranasctionsEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobCardsTranasctionsStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobCardsTranasctionsClosedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrioritySequence)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit">Edit</a>
                @*<a class="btn btn-warning" asp-action="Details">Details</a>*@
                <a class="btn btn-danger" asp-action="Delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
