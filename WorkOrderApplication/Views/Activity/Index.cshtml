@model IEnumerable<WorkOrderCore.Infrastructure.Persistence.DataContext.JobActivities>

@{
    ViewData["Title"] = "Index";
}

<h2>Job Activities</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create Activity</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Business Unit
            </th>
            <th>
                Activity Discription
            </th>
            <th>
                Activity Status
            </th>
            <th>
                Minimum Duration
            </th>
            <th>
                Maximum Duration
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BuninessUnit.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobActivityDescriptioin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobActivitiesStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinDuration) Days
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxDuration) Days
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Create" asp-route-id="@item.Id" asp-route-viewType="edit">Edit</a>
                    @*<a class="btn btn-warning" asp-controller="Rider" asp-action="Index">Details</a>*@
                    @*<a class="btn btn-danger" asp-action="Delete">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
