@model IEnumerable<WorkOrderCore.Infrastructure.Persistence.DataContext.JobCards>

@{
    ViewData["Title"] = "Index";
}

<h2>Job Cards</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Business Unit Name
            </th>
            <th>
                Job Description
            </th>
            <th>
                Job Duration
            </th>
            <th>
                Job Status
            </th>
            <th>
                Creation Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobDuration) Days
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit">Edit</a>
                    <a asp-controller="Details" asp-action="Index" class="btn btn-warning">Details</a>
                    <a class="btn btn-danger" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
