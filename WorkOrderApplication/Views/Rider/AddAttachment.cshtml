@{ 
    ViewData["Title"] = "AddAttachment";
    Layout = "/Views/Shared/_ClientLayout.csHtml";
}
<div class="row">
    <h2>Add Attachment</h2>

    <div class="col-xs-12 col-md-4">
        <a class="btn btn-warning" asp-action="Index" style="float:right">Back</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xs-12 col-md-4">
        <form asp-controller="Rider" asp-action="AddAttachment"
              enctype="multipart/form-data" method="post">
            <input type="hidden" name="transactionId" value="@ViewBag.TransactionId" />
            <input type="file" multiple name="files" class="form-control" value=""/>
            <br />
            <label>Description</label>
            <input type="text" name="description" class="form-control"/>
            <hr />
            <button type="submit" class="btn btn-success" style="float:right">Save</button>
        </form>
    </div>
</div>